<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/backgroundLight"
        app:layout_constraintBottom_toBottomOf="@+id/deviceId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/letter_ball_radius"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="48dp"
        android:paddingTop="8dp"
        android:paddingEnd="0dp"
        android:paddingBottom="8dp"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/mainDark"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01:01:01:01:01:01" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/vendorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="118dp"
        android:paddingTop="4dp"
        android:paddingStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/letterImage"
        app:layout_constraintTop_toBottomOf="@+id/background"
        tools:text="Format data" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sensorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/vendorID"
        app:layout_constraintTop_toBottomOf="@+id/background"
        tools:text="Sensor Brand" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notifications_off_24px" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/letterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background"
        tools:background="#FF0000"
        tools:layout_height="26dp"
        tools:layout_width="26dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/row_main_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vendorID"
        app:useDefaultMargins="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_temp_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_temp" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_temp_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/temperature_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_humid_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_humid" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_humid_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/humidity_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_pres_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_pressure" />

            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_pres_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/pressure_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_sound_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_sound" />

            <TextView
                android:id="@+id/sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_sound_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/sound_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_light_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_light" />

            <TextView
                android:id="@+id/light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_light_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/light_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_signal_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_signal" />

            <TextView
                android:id="@+id/signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_signal_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/signal_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_main_co2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:srcCompat="@drawable/icon_measure_small_co2" />

            <TextView
                android:id="@+id/co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/row_main_co2_icon"
                android:fontFamily="@font/montserrat"
                android:text="@string/co2_reading"
                android:textColor="@color/mainDark"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/lastSeenTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/lastSeenColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_main_grid"
        tools:text="Updated 2 h 5 min 45 s ago" />
</androidx.constraintlayout.widget.ConstraintLayout>